<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
        <h1><%= @user.name %></h1>
      <p><%= link_to "show", @user %></p>
    </section>
    <p><%= link_to "followings", followings_user_path(@user) %>(<%= @user.following_users.count %>)</p>
    <p><%= link_to "followers", followers_user_path(@user) %>(<%= @user.follower_users.count %>)</p>
  </aside>
  <div class="col-md-8">
    <h1><%= @title %></h1>
    <ol><%= render @users %></ol>
  </div>
</div>